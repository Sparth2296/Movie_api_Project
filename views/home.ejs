            </div>
        </div>

        <div class="slider-nav">
            <div class="nav-dot active" data-slide="0"></div>
            <div class="nav-dot " data-slide="1"></div>
            <div class="nav-dot" data-slide="2"></div>
            <div class="nav-dot" data-slide="3"></div>
        </div>
    </section>

    <!-- Main Content -->
    <main class="main-content" id="movies">
        <div class="section-title">
            <h2>Featured Movies</h2>
            <p>Discover amazing cinema from around the world</p>
        </div>

        <div class="movie-container">
           

            <!-- Your EJS loop would go here -->
            
            <% movies.forEach(movie => { %>
                <div class="movie-card">
                    <img src="/uploads/MoviePoster/<%= movie.moviePoster %>" alt="<%= movie.name %> Poster" class="movie-poster">
                    <div class="movie-info">
                        <h2 class="movie-title"><%= movie.name %></h2>
                        <p><strong>Actor:</strong> <%= movie.actor %></p>
                        <p><strong>Type:</strong> <%= movie.movieType %></p>
                        <p class="short-details"><%= movie.shortDetails %></p>
                        <button class="view-btn">View Details</button>
                    </div>
                </div>
            <% }) %>
            
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer" id="about">
        <div class="footer-content">
            <div class="footer-links">
                <a href="#privacy">Privacy Policy</a>
