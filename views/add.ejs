<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Movie - Dark Theme</title>
    <link rel="stylesheet" href="/css/add.css">
</head>

<body>
    <div class="container">
        <h1>ðŸŽ¬ Add Movie</h1>
        
        <form action="/addmovie" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Movie Name</label>
                <input type="text" id="name" name="name" placeholder="Enter movie title..." required>
            </div>

            <div class="form-group">
                <label for="actor">Lead Actor</label>
                <input type="text" id="actor" name="actor" placeholder="Enter main actor's name..." required>
            </div>

            <div class="form-group">
                <label for="movieType">Genre</label>
                <input type="text" id="movieType" name="movieType" placeholder="e.g., Action, Drama, Comedy..." required>
            </div>

            <div class="form-group">
                <label for="shortDetails">Short Description</label>
                <input type="text" id="shortDetails" name="shortDetails" placeholder="Brief movie summary..." required>
            </div>

            <div class="form-group">
                <label for="fullDetails">Full Details</label>
                <textarea id="fullDetails" name="fullDetails" placeholder="Complete movie description, plot, cast details..." required></textarea>
            </div>

            <div class="form-group">
                <label for="img">Movie Poster</label>
                <div class="file-input-wrapper">
                    <input type="file" id="img" name="img" accept="image/*" required>
                    <label for="img" class="file-input-label">
                        <span>Choose movie poster image</span>
                    </label>
                </div>
            </div>

            <button type="submit" class="submit-btn">
                Add Movie to Database
            </button>
        </form>
    </div>

    <script>
        // File input feedback
        document.getElementById('img').addEventListener('change', function(e) {
            const label = document.querySelector('.file-input-label span:last-child');
            const fileName = e.target.files[0]?.name;
            if (fileName) {
                label.textContent = `Selected: ${fileName}`;
                label.parentElement.style.borderColor = '#4ecdc4';
                label.parentElement.style.background = 'rgba(78, 205, 196, 0.1)';
            }
        });

        // Form validation feedback
        const inputs = document.querySelectorAll('input[type="text"], textarea');
        inputs.forEach(input => {
            input.addEventListener('input', function() {
                if (this.value.length > 0) {
                    this.style.borderColor = '#4ecdc4';
                } else {
                    this.style.borderColor = 'rgba(255, 255, 255, 0.1)';
                }
            });
        });
    </script>
</body>

</html>